<div class="container">
    <div class="row">
    
    <p></p>
    <h1>Liste des séries par catégorie</h1>
        <div class="col-md-10 col-md-offset-1">

            <div class="panel panel-default panel-table">
              <div class="panel-heading">
                <div class="row">
                  <div class="recherche">
                    <form action = "/mainpage" method="GET">
                      <button type="submit" class="btn btn-sm btn-primary btn-create">Série</button>
                      </form>
                  </div>
                  <div class="cat">
                  <form action = "/categorie1" method="GET">
                    <button type="submit" class="btn btn-sm btn-primary btn-create">Action</button></form>
                    <form action = "/categorie2" method="GET">
                      <button type="submit" class="btn btn-sm btn-primary btn-create">Aventure</button></form>
                      <form action = "/categorie3" method="GET">
                        <button type="submit" class="btn btn-sm btn-primary btn-create">Comédie</button></form>
                        <form action = "/categorie4" method="GET">
                          <button type="submit" class="btn btn-sm btn-primary btn-create">Horreur</button></form>
                          <form action = "/categorie5" method="GET">
                            <button type="submit" class="btn btn-sm btn-primary btn-create">Drama</button></form>
                  </div>
                  <div class="create">
                    <form action = "/addcategorie" method="GET">
                    <button type="submit" class="btn btn-sm btn-primary btn-create">Create New Catégorie</button>
                    </form>
                  </div>
                </div>
              </div>
            <div class="container">
              <div class="row">
                <div class="span5">
                        <table class="table table-striped table-condensed">
                              <thead>
                                
                              <tr>
                                  <th>Catégorie</th>
                                  <th>Titre</th>
                                  <th>Status</th>                                          
                              </tr>
                              <% for (let i = 0 ;  i < catégorie.length ; i++) { %>
                              <tr>
                                <td><%= catégorie[i].category %></td>
                                <td><%= catégorie[i].nom %> </td>
                                <td><span class="label label-success"> <%= catégorie[i].statut %></span>
                                </tr>
                                <% } %>
                        </table>
                        </div>
              </div>
            </div>
            </div>

</div></div></div>
